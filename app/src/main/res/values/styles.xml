<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OnScreenInfoBig">
        <item name="android:textColor">@color/OnScreenInfo</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">8dp</item>
    </style>

    <style name="OnScreenInfoLittle">
        <item name="android:textColor">@color/OnScreenInfo</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
        <item name="outlineColor">@color/black</item>
        <item name="outlineSize">6dp</item>
    </style>

    <style name="OnScreenInfoUnits">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FabButtons">
        <item name="backgroundTint">#FFFFFF</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1px</item>
    </style>


</resources>