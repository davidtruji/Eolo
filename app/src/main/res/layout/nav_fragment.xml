<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    mapbox:layout_constraintBottom_toBottomOf="parent"
    mapbox:layout_constraintEnd_toEndOf="parent"
    mapbox:layout_constraintStart_toStartOf="parent"
    mapbox:layout_constraintTop_toTopOf="parent"
    tools:context=".ui.nav.NavFragment">

    <FrameLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent">


        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraZoom="14">

        </com.mapbox.mapboxsdk.maps.MapView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screenInfo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlay"
                style="@style/FabButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/play"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/bearingBlock"
                style="@style/infoBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_block_background"
                android:orientation="vertical"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvBearingLetter"
                    style="@style/OnScreenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/north" />

                <TextView
                    android:id="@+id/tvBearing"
                    style="@style/OnScreenInfoUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_bearing" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/speedBlock"
                style="@style/infoBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvSpeed"
                    style="@style/OnScreenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_speed" />

                <TextView
                    android:id="@+id/tvSpeedUnits"
                    style="@style/OnScreenInfoUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kmh_unit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeBlock"
                style="@style/infoBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent">

                <Chronometer
                    android:id="@+id/tvChronometer"
                    style="@style/OnScreenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTimeLabel"
                    style="@style/OnScreenInfoUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/distanceBlock"
                style="@style/infoBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvDistance"
                    style="@style/OnScreenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_distance" />

                <TextView
                    android:id="@+id/tvDistanceUnits"
                    style="@style/OnScreenInfoUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/distance_unit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/altitudeBlock"
                style="@style/infoBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvAltitude"
                    style="@style/OnScreenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_altitude" />

                <TextView
                    android:id="@+id/tvAltitudeUnits"
                    style="@style/OnScreenInfoUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meters_unit" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>