<?xml version="1.0" encoding="utf-8"?>

<!--TODO: Alto contraste y texto grande-->
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.nav.NavFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraZoom="14">

    </com.mapbox.mapboxsdk.maps.MapView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/screenInfo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAltitudeUnits"
            style="@style/OnScreenInfoUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meters_unit"
            mapbox:layout_constraintBottom_toBottomOf="@+id/tvAltitude"
            mapbox:layout_constraintStart_toEndOf="@+id/tvAltitude" />

        <TextView
            android:id="@+id/tvSpeedUnits"
            style="@style/OnScreenInfoUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kmh_unit"
            android:textStyle="bold"
            mapbox:layout_constraintBottom_toBottomOf="@+id/tvSpeed"
            mapbox:layout_constraintStart_toEndOf="@+id/tvSpeed" />

        <TextView
            android:id="@+id/tvBearingUnits"
            style="@style/OnScreenInfoUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degrees_unit"
            mapbox:layout_constraintStart_toEndOf="@+id/tvBearing"
            mapbox:layout_constraintTop_toTopOf="@+id/tvBearing" />

        <TextView
            android:id="@+id/tvSpeed"
            style="@style/OnScreenInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_speed"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toBottomOf="@+id/tvBearing" />

        <TextView
            android:id="@+id/tvAltitude"
            style="@style/OnScreenInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/default_altitude"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/default_coordinates"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvBearing"
            style="@style/OnScreenInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/default_bearing"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_layers_24"
            mapbox:layout_constraintBottom_toTopOf="@+id/fabCameraMode"
            mapbox:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCameraMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_explore_off_24"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>